<Page x:Class="dash_app.FacturePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:dash_app"
      mc:Ignorable="d" 
      d:DesignHeight="685" d:DesignWidth="1000"
      Title="Facture">

    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource="/images/DashStackApp-background.png"/>
        </StackPanel.Background>
        <Grid x:Name="NavbarGrid" Height="684" Width="120" HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Background="#111F64">
                <Image Source="/images/DashStackLogo.png" Height="75"/>
            </StackPanel>

            <TextBox x:Name="NavbarOption1" Grid.Row="1" Text="Client" TextAlignment="Center" BorderThickness="0" Background="#111F64" Foreground="White" />

            <TextBox x:Name="NavbarOption2" Grid.Row="2" Text="Factures" TextAlignment="Center" BorderThickness="0" Background="#111F64" Foreground="#00C000" />

            <TextBox x:Name="NavbarOption3" Grid.Row="3" Text="Paiements" TextAlignment="Center" BorderThickness="0" Background="#111F64" Foreground="White" />

            <TextBox x:Name="NavbarOption4" Grid.Row="4" Text="Service" TextAlignment="Center" BorderThickness="0" Background="#111F64" Foreground="White" />

            <TextBox x:Name="NavbarOption5" Grid.Row="5" Text="Contact" TextAlignment="Center" BorderThickness="0" Background="#111F64" Foreground="White" />

            <TextBox x:Name="NavbarOption6" Grid.Row="6" Text="Profil" TextAlignment="Center" BorderThickness="0" Background="#111F64" Foreground="White" />

            <TextBox x:Name="NavbarOption7" Grid.Row="7" Text="Settings" TextAlignment="Center" BorderThickness="0" Background="#111F64" Foreground="White" />

            <TextBox x:Name="NavbarOption8" Grid.Row="8" Text="Logout" TextAlignment="Center" BorderThickness="0" Background="#111F64" Foreground="White" />
        </Grid>

        <Canvas>
            <Label Content="Factures" FontSize="70" Canvas.Left="215" Canvas.Top="-646" Foreground="#7142D7"/>
            <Grid Width="450" Canvas.Left="125" Canvas.Top="-516">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Content="Produits" HorizontalAlignment="Center" FontSize="40" Foreground="White"/>
                <Label Grid.Column="1" Content="Montants" HorizontalAlignment="Center" FontSize="40" Foreground="White"/>

                <TextBox Grid.Column="0" Grid.Row="1"  Text="{Binding ProduitsNom}" Background="#C0ECF2"/>
                <TextBox Grid.Column="1" Grid.Row="1"  Text="{Binding ProduitsPrix}" Background="#C0ECF2"/>
            </Grid>
        </Canvas>

        <Canvas>
            <Grid Width="400" Height="650" Canvas.Left="586" Canvas.Top="-660" Background="AliceBlue">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Content="Description" HorizontalAlignment="Center" FontSize="20" Foreground="Black"/>
                <Label Grid.Column="1" Content="Quantité" HorizontalAlignment="Center" FontSize="20" Foreground="Black"/>
                <Label Grid.Column="2" Content="Prix" HorizontalAlignment="Center" FontSize="20" Foreground="Black"/>

                <TextBox Grid.Column="0" Grid.Row="1"  Text="{Binding ProduitsNom}" Background="Transparent" BorderThickness="0"/>
                <TextBox Grid.Column="1" Grid.Row="1"  Text="{Binding ProduitsQuantite}" Background="Transparent" BorderThickness="0"/>
                <TextBox Grid.Column="2" Grid.Row="1"  Text="{Binding ProduitsPrixBase}" Background="Transparent" BorderThickness="0"/>

                <TextBox Grid.Column="2" Grid.Row="1"  Text="{Binding PrixHT}" Background="Transparent" BorderThickness="0"/>
                <TextBox Grid.Column="2" Grid.Row="1"  Text="{Binding PrixTVA}" Background="Transparent" BorderThickness="0"/>
                <TextBox Grid.Column="2" Grid.Row="1"  Text="{Binding PrixTotal}" Background="Transparent" BorderThickness="0"/>

                <TextBox Grid.Column="0" Grid.Row="2"  Grid.ColumnSpan="2" Text="Total HT: " Background="Transparent" BorderThickness="0"/>
                <TextBox Grid.Column="0" Grid.Row="3"  Grid.ColumnSpan="2" Text="TVA: " Background="Transparent" BorderThickness="0"/>
                <TextBox Grid.Column="0" Grid.Row="4"  Grid.ColumnSpan="2" Text="Total TTC: " Background="Transparent" BorderThickness="0"/>
            </Grid>
        </Canvas>

    </StackPanel>
</Page>
