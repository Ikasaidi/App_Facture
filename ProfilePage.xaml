<Window x:Class="dashStackApp.ProfilePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dashStackApp"
        mc:Ignorable="d"
        Height="{x:Static SystemParameters.PrimaryScreenHeight}"
        Width="{x:Static SystemParameters.PrimaryScreenWidth}"
        Title="Profile">
    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource="/images/Background.png" />
        </StackPanel.Background>
            <Grid x:Name="NavBarGrid" Height="{x:Static SystemParameters.PrimaryScreenHeight}" Width="120" HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

            <StackPanel Background="#111F64">
                <Image Source="/images/DashStackLogo.png" Height="75"/>
            </StackPanel>
        </Grid>



            <Canvas>
                <Image Source="/images/BlankAvatar.png" Height="100" Width="100" Canvas.Left="150" Canvas.Top="-656" />
                <Label Canvas.Left="260" Canvas.Top="-657" Content="Profil" FontSize="50" />
                <Grid Canvas.Left="144" Canvas.Top="-500">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="100"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" Background="Transparent" BorderThickness="0" Text="Nom :" FontSize="20"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Background="Transparent" BorderThickness="0" Text="{Binding Nom}"/>
                    <TextBox Grid.Row="1" Background="Transparent" BorderThickness="0" Text="Prenom :" FontSize="20"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Background="Transparent" BorderThickness="0" Text="{Binding Prenom}"/>
                    <TextBox Grid.Row="2" Background="Transparent" BorderThickness="0" Text="Telephone :" FontSize="20"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Background="Transparent" BorderThickness="0" Text="{Binding Telephone}"/>
                    <TextBox Grid.Row="3" Background="Transparent" BorderThickness="0" Text="Email :" FontSize="20"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Background="Transparent" BorderThickness="0" Text="{Binding Email}"/>
                </Grid>
            </Canvas>

        <Canvas>
            <Button
                Content="Modifier mon profile"
                Padding="5" 
                Background="#3D42DF" 
                Foreground="White" 
                Canvas.Left="600" 
                Canvas.Top="-507"
                Click="UpdateProfile_Click"/>
            <Label Canvas.Left="881" Canvas.Top="-527" Content="Activité" FontSize="30" Opacity="0.5"/>
                <Border Width="700" BorderThickness="5" BorderBrush="White" Background="Gray" Opacity="0.5" Canvas.Left="585" Canvas.Top="-460">
                    <TextBlock Height="440" Text="{Binding FactureRecent}" Foreground="Black" Margin="5,0,-5,0" />
                </Border>
            </Canvas>
        </StackPanel>
</Window>