<Page  x:Class="SalonCoiffure.FacturePage"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:local="clr-namespace:SalonCoiffure"
       mc:Ignorable="d"
      Title="Facture">

    <StackPanel>
        
        <Grid x:Name="NavbarGrid" Height="684" Width="120" HorizontalAlignment="Left">
            

           

        </Grid>

        <Canvas>
            <Label Content="Factures" FontSize="70" Canvas.Left="215" Canvas.Top="-646" Foreground="#7142D7"/>
            <Grid Width="450" Canvas.Left="125" Canvas.Top="-516">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Content="Produits" HorizontalAlignment="Center" FontSize="40" Foreground="White"/>
                <Label Grid.Column="1" Content="Montants" HorizontalAlignment="Center" FontSize="40" Foreground="White"/>

                <TextBox Grid.Column="0" Grid.Row="1"  Text="{Binding ProduitsNom}" Background="#C0ECF2"/>
                <TextBox Grid.Column="1" Grid.Row="1"  Text="{Binding ProduitsPrix}" Background="#C0ECF2"/>
            </Grid>
        </Canvas>

        <Canvas>
            <Grid Width="400" Height="650" Canvas.Left="586" Canvas.Top="-660" Background="AliceBlue">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Content="Description" HorizontalAlignment="Center" FontSize="20" Foreground="Black"/>
                <Label Grid.Column="1" Content="Quantité" HorizontalAlignment="Center" FontSize="20" Foreground="Black"/>
                <Label Grid.Column="2" Content="Prix" HorizontalAlignment="Center" FontSize="20" Foreground="Black"/>

                <TextBox Grid.Column="0" Grid.Row="1"  Text="{Binding ProduitsNom}" Background="Transparent" BorderThickness="0"/>
                <TextBox Grid.Column="1" Grid.Row="1"  Text="{Binding ProduitsQuantite}" Background="Transparent" BorderThickness="0"/>
                <TextBox Grid.Column="2" Grid.Row="1"  Text="{Binding ProduitsPrixBase}" Background="Transparent" BorderThickness="0"/>

                <TextBox Grid.Column="2" Grid.Row="1"  Text="{Binding PrixHT}" Background="Transparent" BorderThickness="0"/>
                <TextBox Grid.Column="2" Grid.Row="1"  Text="{Binding PrixTVA}" Background="Transparent" BorderThickness="0"/>
                <TextBox Grid.Column="2" Grid.Row="1"  Text="{Binding PrixTotal}" Background="Transparent" BorderThickness="0"/>

                <TextBox Grid.Column="0" Grid.Row="2"  Grid.ColumnSpan="2" Text="Total HT: " Background="Transparent" BorderThickness="0"/>
                <TextBox Grid.Column="0" Grid.Row="3"  Grid.ColumnSpan="2" Text="TVA: " Background="Transparent" BorderThickness="0"/>
                <TextBox Grid.Column="0" Grid.Row="4"  Grid.ColumnSpan="2" Text="Total TTC: " Background="Transparent" BorderThickness="0"/>
            </Grid>
        </Canvas>

    </StackPanel>
</Page>
