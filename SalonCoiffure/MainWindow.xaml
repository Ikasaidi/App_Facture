<Window x:Class="SalonCoiffure.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalonCoiffure"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000">
    <DockPanel >

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="LightGray" Height="50" >
            <Button Content="Clients" Width="100" Margin="5" Click="ClientsButton_Click" />
            <Button Content="Services" Width="100" Margin="5" Click="ServicesButton_Click"/>
            <Button Content="Login" Width="100" Margin="5" Click="LoginButton_Click"/>
            <Button Content="Facture" Width="100" Margin="5" Click="FactureButton_Click"/>
            <Button Content="Paiement" Width="100" Margin="5" Click="PaiementButton_Click"/>
        </StackPanel>

        <!-- Permet de naviguer entre les pages -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
