<Page x:Class="SalonCoiffure.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="DashboardPage">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <Label Content="Mon Activité" Grid.Column="0" Grid.Row="0" FontSize="20" FontFamily="Arial Black" Foreground="#3D42DF" />

        <!-- Boîte de factures à droite -->
        <StackPanel Grid.Column="1" Grid.Row="0" Background="#FFC0E2F2" Margin="10" >
            <Label Content="Mes Factures" FontSize="14" FontFamily="Cambria Math" Foreground="White"/>

            <Grid Margin="0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="À Venir" FontWeight="Bold"/>
                    <TextBlock Text="24 400 $" />
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="En retard" FontWeight="Bold"/>
                    <TextBlock Text="2 200 $" />
                </StackPanel>
            </Grid>

            <!-- Paiements attendus -->
            <StackPanel Orientation="Vertical" Background="#FFC0E2F2" Margin="10" >

                <!-- Paiement 1 -->
                <StackPanel Background="#E0E8F7" Margin="0,5" >
                    <TextBlock Text="8 000 $" FontWeight="Bold" FontSize="14" Background="#FFC0E2F2"/>
                    <TextBlock Text="Roxan Taylor" FontSize="12" Background="#FFC0E2F2"/>
                    <TextBlock Text="Attendu dans : 6 jours" FontStyle="Italic" FontSize="11" Background="#FFC0E2F2"/>
                </StackPanel>

                <!-- Paiement 2 -->
                <StackPanel Background="#E0E8F7" Margin="0,5" >
                    <TextBlock Text="6 400 $" FontWeight="Bold" FontSize="14" Background="#FFC0E2F2"/>
                    <TextBlock Text="Livia Bator" FontSize="12" Background="#FFC0E2F2"/>
                    <TextBlock Text="Attendu dans : 8 jours" FontStyle="Italic" FontSize="11" Background="#FFC0E2F2"/>
                </StackPanel>

                <!-- Paiement 3 -->
                <StackPanel Background="#E0E8F7" Margin="0,5" >
                    <TextBlock Text="2 000 $" FontWeight="Bold" FontSize="14" Background="#FFC0E2F2"/>
                    <TextBlock Text="Kianna Dorwart" FontSize="12" Background="#FFC0E2F2"/>
                    <TextBlock Text="Attendu dans : 20 jours" FontStyle="Italic" FontSize="11" Background="#FFC0E2F2"/>
                </StackPanel>

            </StackPanel>
        </StackPanel>
        <!-- Section CA encaissé avec taille fixe -->
        <Grid Grid.ColumnSpan="2" Grid.Row="1" Margin="0,20,0,0" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Bloc 1 -->
            <Border Background="#FFDCE5FD" Width="300" Margin="10">
                <StackPanel Margin="10">
                    <TextBlock Text="Chiffre d’affaires / Dépenses totales" FontWeight="Bold" Margin="0 0 0 10"/>
                    <DockPanel>
                        <TextBlock Text="CA encaissé" DockPanel.Dock="Left"/>
                        <TextBlock Text="80 200 $" DockPanel.Dock="Right"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="CA encaissé" DockPanel.Dock="Left"/>
                        <TextBlock Text="50 300 $" DockPanel.Dock="Right"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="CA encaissé" DockPanel.Dock="Left"/>
                        <TextBox Text="30 500 $" Width="80" Background="#FFDCE5FD" BorderBrush="#FFDCE5FD" DockPanel.Dock="Right"/>
                    </DockPanel>
                </StackPanel>
            </Border>

            <!-- Bloc 2 -->
            <Border Grid.Column="1" Background="#FFDCE5FD" Width="300" Margin="10">
                <StackPanel Margin="10">
                    <TextBlock Text="Vente de Marchandises" FontWeight="Bold" Margin="0 0 0 10"/>
                    <DockPanel>
                        <TextBlock Text="CA encaissé" DockPanel.Dock="Left"/>
                        <TextBlock Text="24 000 $" DockPanel.Dock="Right"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="CA encaissé" DockPanel.Dock="Left"/>
                        <TextBlock Text="18 000 $" DockPanel.Dock="Right"/>
                    </DockPanel>
                </StackPanel>
            </Border>
        </Grid>


    </Grid>
</Page>
