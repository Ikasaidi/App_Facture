<Page x:Class="SalonCoiffure.ReceiptWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="ReceiptWindow" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Colonne gauche : création/modif -->
        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,10,0">
            <Label Content="Client :" />
            <ComboBox ItemsSource="{Binding Customers}" 
                      SelectedItem="{Binding SelectedCustomer}" 
                      DisplayMemberPath="Nom"
                      Width="200"/>
            <Label Content="Factures existantes :" />
            <ListBox ItemsSource="{Binding Factures}" 
                     SelectedItem="{Binding SelectedFacture}" 
                     DisplayMemberPath="Id"
                     Height="100"
                     Width="200"
                     Margin="0,10,0,10"/>
            <Label Content="Services :" />
            <ListBox x:Name="ServicesListBox"
                     ItemsSource="{Binding AvailableServices}"
                     DisplayMemberPath="Nom"
                     SelectionMode="Multiple"
                     SelectionChanged="ServicesListBox_SelectionChanged"/>

            <Button Content="Supprimer la facture"
                    Command="{Binding DeleteFactureCommand}"
                    Margin="0,10,0,0"
                    Width="150" />

            <Button Content="Mettre à jour la facture"
                    Command="{Binding UpdateFactureCommand}"
                    Margin="0,10,0,0"
                    Width="150" />
        </StackPanel>

        <!-- Colonne droite : détails facture sélectionnée -->
        <StackPanel Grid.Column="1" Margin="10,0,0,0">
            <TextBlock Text="Client :" FontWeight="Bold"/>
            <TextBlock Text="{Binding SelectedCustomer.Nom}" />

            <TextBlock Text="Services :" FontWeight="Bold" Margin="0,10,0,0"/>
            <ItemsControl ItemsSource="{Binding SelectedServices}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Nom}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock Text="Prix total :" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding TotalPrix}" />
        </StackPanel>

        <!-- Résumé & bouton -->
        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding TotalPrix, StringFormat='Total : {0:C}'}"
                   FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <Button Grid.Row="2" Grid.ColumnSpan="2" Content="Créer la facture"
                Command="{Binding CreateFactureCommand}" Margin="10" HorizontalAlignment="Center"/>
    </Grid>
</Page>
