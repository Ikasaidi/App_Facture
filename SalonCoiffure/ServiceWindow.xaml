<Page x:Class="SalonCoiffure.ServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalonCoiffure"
        mc:Ignorable="d"
        Title="Service" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Nom" />
            <TextBox Width="100" Margin="5" Text="{Binding SelectedService.Nom, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="Prix" />
            <TextBox Width="100" Margin="5" Text="{Binding SelectedService.Prix, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding FilteredServices}" 
                  SelectedItem="{Binding SelectedService}" 
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}"/>
                <DataGridTextColumn Header="Prix" Binding="{Binding Prix}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Ajouter" Command="{Binding AddCommand}" Margin="5"/>
            <Button Content="Modifier" Command="{Binding UpdateCommand}" Margin="5"/>
            <Button Content="Supprimer" Command="{Binding DeleteCommand}" Margin="5"/>
            <Label>Rechercher un service</Label>
            <TextBox Width="100" Margin="5" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

    </Grid>
</Page>
