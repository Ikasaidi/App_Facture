<Page x:Class="SalonCoiffure.PaiementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:SalonCoiffure"
      mc:Ignorable="d"
      Title="Paiement">

    <Grid  >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

       
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
               
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Image Source="/Online Payment.png" Width="80" Height="80" Margin="0,0,10,0"/>
                    <TextBlock Text="Paiement" FontSize="28" FontWeight="Bold" Foreground="#FF0D3F31" VerticalAlignment="Center"/>
                </StackPanel>

              
                <TextBlock Text="Destinataire:" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,5"/>
                <TextBlock Text="Company.com" FontSize="14" Foreground="White" TextWrapping="Wrap" Margin="0,0,0,10"/>

                <TextBlock Text="Référence:" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,5"/>
                <TextBlock Text="#12" FontSize="14" Foreground="White" TextWrapping="Wrap" Margin="0,0,0,10"/>

                <TextBlock Text="Description:" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,5"/>
                <TextBlock Text="Schwarzkopf-fer plat 1.5”SKP Proflat 2.0" FontSize="14" Foreground="White" TextWrapping="Wrap" Margin="0,0,0,10"/>

                <TextBlock Text="À payer :" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,5"/>
                <TextBlock Text="290.00$" FontSize="22" FontWeight="Bold" Foreground="White" />
            </StackPanel>
        </ScrollViewer>

     
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Background="#AFD9D9D9" >
            <StackPanel Margin="20" VerticalAlignment="Stretch">
                <TextBlock Text="Sélectionnez un moyen de paiement :" FontSize="18" FontWeight="Bold" Foreground="Gray" Margin="0,0,0,20" />

               
                <Button Content="Carte Bancaire" Height="45" Margin="0,0,0,10" Background="#FFCCCCCC" Foreground="Black" Width="160"/>
                <Button Content="Virement" Height="45" Margin="0,0,0,10" Background="#FFCCCCCC" Foreground="Black" Width="160"/>
                <Button Content="Google Pay" Height="45" Margin="0,0,0,20" Background="#FFCCCCCC" Foreground="Black" Width="160"/>

                <Button Content="Enregistrer" Height="45" Margin="0,0,0,20" Background="#CCCCCC" Foreground="Black" Width="160"/>
                <Button Content="Payer" Height="50" Background="#3D42DF" Foreground="White" FontSize="16" FontWeight="Bold" Width="239"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
